                  <TextField fx:id="txtPasswordVisible" layoutX="44.0" layoutY="302.0" prefHeight="30.0" prefWidth="261.0" style="-fx-background-radius: 10;" visible="false" />
                  <ImageView fitHeight="22.0" fitWidth="25.0" layoutX="272.0" layoutY="309.0" onMouseClicked="#passwordVisible">
                     <image>
                        <Image url="@../assets/images/pw_eyeIcon.png" />
                     </image>
                  </ImageView>
               </children>
            </AnchorPane>
         </children>
      </AnchorPane>
      <AnchorPane fx:id="loginSide2" layoutX="445.0" prefHeight="603.0" prefWidth="571.0" stylesheets="@../styles/login.css">
         <children>
            <AnchorPane fx:id="loginSide4" layoutY="40.0" prefHeight="523.0" prefWidth="524.0">
               <children>
                  <Text fill="#fffafa" layoutX="68.0" layoutY="89.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome To">
                     <font>
                        <Font name="System Bold" size="48.0" />
                     </font>
                  </Text>
                  <Text fill="#fffdfd" layoutX="76.0" layoutY="151.0" strokeType="OUTSIDE" strokeWidth="0.0" text="CURLINARY ACADEMY">
                     <font>
                        <Font size="33.0" />
                     </font>
                  </Text>
                  <ImageView fitHeight="290.0" fitWidth="396.0" layoutX="59.0" layoutY="177.0">
                     <image>
                        <Image url="@../assets/images/login_img.jpg" />
                     </image>
                  </ImageView>
               </children>
            </AnchorPane>
         </children>
      </AnchorPane>
   </children>
